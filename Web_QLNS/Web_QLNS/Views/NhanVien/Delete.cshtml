@model Web_QLNS.Controllers.ViewModelNV

@{
    ViewData["Title"] = "Delete";
}
<div class="col-md-2">

</div>
<div class="col-md-1">
    <a asp-action="Index" class="btn btn-outline-warning mt-md-5"><i class="fa fa-angle-left"></i> Trở về </a>
</div>
<div class="col-md-6 mt-md-5">
    <form asp-action="Delete" class="create__NV">
        <h1 class="text-center mb-md-5">Bạn có thật sự muốn xóa nhân viên này?</h1>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="nhanVien.Idnv" class="col-md-3 control-label"></label>
            <input asp-for="nhanVien.Idnv" class="col-md-9 form-control" readonly />
            <span asp-validation-for="nhanVien.Idnv" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="nhanVien.TenNv" class="col-md-3 control-label"></label>
            <input asp-for="nhanVien.TenNv" class="col-md-9 form-control" />
            <span asp-validation-for="nhanVien.TenNv" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="nhanVien.Cmnd" class="col-md-3 control-label"></label>
            <input asp-for="nhanVien.Cmnd" class="col-md-9 form-control" />
            <span asp-validation-for="nhanVien.Cmnd" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="nhanVien.DienThoai" class="col-md-3 control-label"></label>
            <input asp-for="nhanVien.DienThoai" class="col-md-9 form-control" />
            <span asp-validation-for="nhanVien.DienThoai" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <input type="submit" value="Xóa nhân viên" class="btn btn-danger col-md-12" />
        </div>
    </form>
</div>
