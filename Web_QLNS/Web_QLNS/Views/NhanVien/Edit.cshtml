@model Web_QLNS.Controllers.ViewModelNV

@{
    ViewData["Title"] = "Edit";
}

<div class="col-md-2">

</div>
<div class="col-md-1">
    <a asp-action="Index" class="btn btn-outline-warning mt-md-5"><i class="fa fa-angle-left"></i> Trở về </a>
</div>
<div class="col-md-6 mt-md-5">
    <form asp-action="Edit" enctype="multipart/form-data" class="create__NV">
        <h1 class="text-center mb-md-5">Sửa hồ sơ nhân viên</h1>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="phongBan.TenPb" class="control-label col-md-3"></label>
            <select asp-for="nhanVien.Idpb" class="form-control col-md-9">
                @foreach (var pb in Model.ListPhongBan)
                {
                    <option value="@pb.Idpb">@pb.TenPb </option>
                }
            </select>
        </div>
        <div class="form-group row">
            <label asp-for="chuVu.TenCv" class="control-label col-md-3"></label>
            <select asp-for="nhanVien.Idcv" class="form-control col-md-9">
                @foreach (var cv in Model.ListChucVu)
                {
                    <option value="@cv.Idcv">@cv.TenCv </option>
                }
            </select>
        </div>
        <div class="form-group row">
            <label asp-for="hopDongLaoDong.LuongCb" class="control-label col-md-3"></label>
            <input asp-for="hopDongLaoDong.LuongCb" class="form-control col-md-9" />
            <span asp-validation-for="hopDongLaoDong.LuongCb" class="text-danger col-md-12"></span>
        </div>
        <div class="form-group row">
            <label asp-for="hopDongLaoDong.NgayKy" class="control-label col-md-3"></label>
            <input asp-for="hopDongLaoDong.NgayKy" class="form-control col-md-9" />
            <span asp-validation-for="hopDongLaoDong.NgayKy" class="text-danger col-md-12"></span>
        </div>
        <div class="form-group row">
            <label asp-for="nhanVien.TenNv" class="control-label col-md-3"></label>
            <input asp-for="nhanVien.TenNv" class="form-control col-md-9" />
            <span asp-validation-for="nhanVien.TenNv" class="text-danger col-md-12"></span>
        </div>
        <div class="form-group row">
            <label asp-for="nhanVien.GioiTinh" class="control-label col-md-3"></label>
            <select asp-for="nhanVien.GioiTinh" class="form-control col-md-9">

                <option value="true">Nam </option>
                <option value="false">Nữ </option>

            </select>
            <span asp-validation-for="nhanVien.GioiTinh" class="text-danger col-md-12"></span>
        </div>
        <div class="form-group row">
            <label asp-for="nhanVien.NgaySinh" class="control-label col-md-3"></label>
            <input asp-for="nhanVien.NgaySinh" class="form-control col-md-9" />
            <span asp-validation-for="nhanVien.NgaySinh" class="text-danger col-md-12"></span>
        </div>
        <div class="form-group row">
            <label asp-for="nhanVien.Cmnd" class="control-label col-md-3"></label>
            <input asp-for="nhanVien.Cmnd" class="form-control col-md-9" />
            <span asp-validation-for="nhanVien.Cmnd" class="text-danger col-md-12"></span>
        </div>
        <div class="form-group row">
            <label asp-for="nhanVien.DiaChi" class="control-label col-md-3"></label>
            <input asp-for="nhanVien.DiaChi" class="form-control col-md-9" />
            <span asp-validation-for="nhanVien.DiaChi" class="text-danger col-md-12"></span>
        </div>
        <div class="form-group row">
            <label asp-for="nhanVien.DienThoai" class="control-label  col-md-3"></label>
            <input asp-for="nhanVien.DienThoai" class="form-control col-md-9" />
            <span asp-validation-for="nhanVien.DienThoai" class="text-danger  col-md-12"></span>
        </div>
        <div class="form-group row">
            <label asp-for="nhanVien.Email" class="control-label  col-md-3"></label>
            <input asp-for="nhanVien.Email" class="form-control col-md-9" />
            <span asp-validation-for="nhanVien.Email" class="text-danger col-md-12"></span>
        </div>
        <div class="form-group row">
            <label asp-for="nhanVien.UploadHinh" class="control-label col-md-3"></label>
            <input asp-for="nhanVien.UploadHinh" accept="image/*" class=" col-md-9" />
            @if (Model.nhanVien != null)
            {
                <img src="@("~/img/" + Model.nhanVien.HinhAnh)" asp-append-version="true" width="170" height="150" />
            }
            <span asp-validation-for="nhanVien.UploadHinh" class="text-danger col-md-12" hidden></span>
        </div>
        @*<div class="form-group" >
                <label asp-for="nhanVien.TinhTrang" class="control-label"></label>
                <select asp-for="nhanVien.TinhTrang" class="form-control" >

                      <option value="true">Đang làm việc</option>

                </select>
                <span asp-validation-for="nhanVien.TinhTrang" class="text-danger"></span>
            </div>*@
        <div class="form-group row">
            <input type="submit" value="Lưu thông tin" class="btn btn-outline-info col-md-12" onclick="console.log(@Model.nhanVien)"/>
        </div>
    </form>
</div>