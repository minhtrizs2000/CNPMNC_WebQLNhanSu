@model Web_QLNS.Controllers.ViewModelNV

@{
    ViewData["Title"] = "Details";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web_QLNS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/js/script.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" />
    <link href="~/css/MyStyle.css" rel="stylesheet" />
</head>
<body class="py-0">
    <header id="myHeader">
        <div class="container-fluid" style="display:flex; justify-content:space-between">
            <a href=@Url.Action("Index", "User") class="btn btn-warning"><i class="fa fa-angle-left"></i> Back </a>
            <button type="button" data-toggle="modal" data-target="#logOut" class="btn btn-danger">Đăng xuất</button>
        </div>
    </header>

    <section class="myBody">
        <div class="container-fluid">
            <div class="detailNV__content">
                <div class="row">
                    <div class="col-md-4 text-center">
                        <img src="@("~/img/" + Model.nhanVien.HinhAnh)" asp-append-version="true" width="300" height="300" style="padding-bottom: 30px;" />
                        <div class="row">
                            <div class="col-md-5">
                                <label asp-for="nhanVien.Idnv" class="control-label"></label>
                            </div>
                            <div class="col-md-5">
                                @Model.nhanVien.Idnv
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-5">
                                <label asp-for="nhanVien.TenNv" class="control-label"></label>
                            </div>
                            <div class="col-md-5">
                                @Model.nhanVien.TenNv
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <h2>Thông tin cá nhân</h2>
                        <div class="row">
                            <div class="col-md-4">
                                <label asp-for="nhanVien.GioiTinh" class="control-label"></label>
                            </div>
                            <div class="col-md-8">
                                @{ if (Model.nhanVien.GioiTinh == true)
                                    {
                                        <span>Nam</span>
                                    }
                                    else
                                    {
                                        <span>Nữ</span>
                                    }}
                            </div>
                            <div class="col-md-4">
                                <label asp-for="nhanVien.NgaySinh" class="control-label"></label>
                            </div>
                            <div class="col-md-8">
                                @Model.nhanVien.NgaySinh.Value.Date
                            </div>
                            <div class="col-md-4">
                                <label asp-for="nhanVien.Cmnd" class="control-label"></label>
                            </div>
                            <div class="col-md-8">
                                @Model.nhanVien.Cmnd
                            </div>
                            <div class="col-md-4">
                                <label asp-for="nhanVien.DiaChi" class="control-label"></label>
                            </div>
                            <div class="col-md-8">
                                @Model.nhanVien.DiaChi
                            </div>
                            <div class="col-md-4">
                                <label asp-for="nhanVien.DienThoai" class="control-label"></label>
                            </div>
                            <div class="col-md-8">
                                @Model.nhanVien.DienThoai
                            </div>
                            <div class="col-md-4">
                                <label asp-for="nhanVien.Email" class="control-label"></label>
                            </div>
                            <div class="col-md-8">
                                @Model.nhanVien.Email
                            </div>
                            <div class="col-md-4">
                                <label asp-for="nhanVien.TinhTrang" class="control-label"></label>
                            </div>
                            <div class="col-md-8">
                                @{ if (Model.nhanVien.TinhTrang == true)
                                    {
                                        <span>Đang làm việc</span>
                                    }
                                    else
                                    {
                                        <span>Nghỉ việc</span>
                                    }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 pt-5">
                        <div class="row">
                            <div class="col-md-4">
                                <label asp-for="chuVu.TenCv" class="control-label"></label>
                            </div>
                            <div class="col-md-8">
                                @foreach (var cv in Model.ListChucVu)
                                {
                                    if (cv.Idcv == Model.nhanVien.Idcv)
                                    {
                                        @cv.TenCv
                                    }
                                }
                            </div>
                            <div class="col-md-4">
                                <label asp-for="phongBan.TenPb" class="control-label"></label>
                            </div>
                            <div class="col-md-8">
                                @foreach (var pb in Model.ListPhongBan)
                                {
                                    if (pb.Idpb == Model.nhanVien.Idpb)
                                    {
                                        @pb.TenPb
                                    }
                                }
                            </div>
                            <div class="col-md-4">
                                <label class="control-label">Mã hợp đồng</label>
                            </div>
                            <div class="col-md-8">
                                @Model.nhanVien.Idnv
                            </div>
                            <div class="col-md-4">
                                <label asp-for="hopDongLaoDong.LuongCb" class="control-label"></label>
                            </div>
                            <div class="col-md-8">
                                @foreach (var hdld in Model.ListHopDongLaoDong)
                                {
                                    if (hdld.Idnv == Model.nhanVien.Idnv)
                                    {
                                        @hdld.LuongCb
                                    }
                                }
                            </div>
                            <div class="col-md-4">
                                <label asp-for="hopDongLaoDong.NgayKy" class="control-label"></label>
                            </div>
                            <div class="col-md-8">
                                @foreach (var hdld in Model.ListHopDongLaoDong)
                                {
                                    if (hdld.Idnv == Model.nhanVien.Idnv)
                                    {
                                        @hdld.NgayKy
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>

    <!-- Scrollable modal -->
    <div class="modal fade" id="logOut" tabindex="-1" aria-labelledby="logOutLable" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-center w-100" id="logOutLable">Đăng xuất</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body text-center">
                    <h1>Bạn muốn đăng xuất ?</h1>
                </div>
                <div class="modal-footer text-center" style="display: block">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Hủy</button>
                    <a class="btn btn-danger" href=@Url.Action("Index", "Login")>Đăng xuất</a>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous"></script>
</body>
</html>


